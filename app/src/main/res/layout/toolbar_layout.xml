<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:theme="@style/Arbuz.Toolbar">

    <!-- todo(CullyCross): maybe add compound drawable? -->
    <Button
        android:id="@+id/action_map"
        style="@style/ToolbarMenuItem"
        android:text="@string/toolbar_menu_map"/>

    <Button
        android:id="@+id/action_red_button"
        style="@style/ToolbarMenuItem"
        android:text="@string/toolbar_menu_red_button"/>

    <Button
        android:id="@+id/action_settings"
        style="@style/ToolbarMenuItem"
        android:text="@string/toolbar_menu_settings"/>
</LinearLayout>

